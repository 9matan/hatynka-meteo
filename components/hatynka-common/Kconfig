menu "Hatynka"
    menu "Wifi"

    config HT_WIFI_SSID
        string "WiFi SSID"
        default "myssid"
        help
            SSID (network name) for the example to connect to.

    config HT_WIFI_PASSWORD
        string "WiFi Password"
        default "mypassword"
        help
            WiFi password (WPA or WPA2) for the example to use.

    choice HT_WIFI_SAE_MODE
        prompt "WPA3 SAE mode selection"
        default HT_STATION_WPA3_SAE_PWE_BOTH
        help
            Select mode for SAE as Hunt and Peck, H2E or both.
        config HT_STATION_WPA3_SAE_PWE_HUNT_AND_PECK
            bool "HUNT AND PECK"
        config HT_STATION_WPA3_SAE_PWE_HASH_TO_ELEMENT
            bool "H2E"
            depends on HT_WIFI_ENABLE_SAE_H2E
        config HT_STATION_WPA3_SAE_PWE_BOTH
            bool "BOTH"
            depends on HT_WIFI_ENABLE_SAE_H2E
    endchoice

    config HT_WIFI_PW_ID
        string "PASSWORD IDENTIFIER"
        depends on  HT_STATION_WPA3_SAE_PWE_HASH_TO_ELEMENT|| HT_STATION_WPA3_SAE_PWE_BOTH
        default ""
        help
            password identifier for SAE H2E

    config HT_WIFI_STATION_MAXIMUM_RETRY
        int "Maximum retry"
        default 5
        help
            Set the Maximum retry to avoid station reconnecting to the AP unlimited when the AP is really inexistent.

    choice HT_WIFI_SCAN_AUTH_MODE_THRESHOLD
        prompt "WiFi Scan auth mode threshold"
        default HT_WIFI_AUTH_WPA2_PSK
        help
            The weakest authmode to accept in the scan mode.
            This value defaults to HT_WIFI_AUTH_WPA2_PSK in case password is present and HT_WIFI_AUTH_OPEN is used.
            Please select HT_WIFI_AUTH_WEP/HT_WIFI_AUTH_WPA_PSK in case AP is operating in WEP/WPA mode.

        config HT_WIFI_AUTH_OPEN
            bool "OPEN"
        config HT_WIFI_AUTH_WEP
            bool "WEP"
        config HT_WIFI_AUTH_WPA_PSK
            bool "WPA PSK"
        config HT_WIFI_AUTH_WPA2_PSK
            bool "WPA2 PSK"
        config HT_WIFI_AUTH_WPA_WPA2_PSK
            bool "WPA/WPA2 PSK"
        config HT_WIFI_AUTH_WPA3_PSK
            bool "WPA3 PSK"
        config HT_WIFI_AUTH_WPA2_WPA3_PSK
            bool "WPA2/WPA3 PSK"
        config HT_WIFI_AUTH_WAPI_PSK
            bool "WAPI PSK"
    endchoice

    endmenu
endmenu
